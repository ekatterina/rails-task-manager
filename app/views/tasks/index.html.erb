<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <div class="checklistElements">
    <%if task.completed == true %>
        <h3>✅</h3>
      <% else %>
          <h3>❌</h3>
      <% end %>
    <h3><strong><%= link_to task.title, task_path(task) %></strong></h3>
  </div>
<% end %>

<%= link_to "Create a new task", new_task_path  %>
